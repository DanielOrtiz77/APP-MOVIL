        android:layout_marginTop="20dp"
        android:backgroundTint="#2196F3"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Ver Perfil"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="350dp"
